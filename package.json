{
  "name": "better-analytics",
  "private": true,
  "scripts": {
    "backend": "pnpm --filter backend dev",
    "dashboard": "pnpm --filter better-analytics-dashboard dev",
    "build": "pnpm --filter better-analytics-dashboard build",
    "start": "pnpm --filter better-analytics-dashboard start",
    "compose": "docker compose up -d && pnpm run migrate && pnpm run generate && pnpm run seed",
    "compose-down": "docker compose down",
    "migrate": "pnpm --filter better-analytics-dashboard migrate && node scripts/run-migration.js",
    "generate": "pnpm --filter better-analytics-dashboard generate",
    "seed": "pnpm --filter better-analytics-dashboard seed",
    "simulate": "node simulate-events.js",
    "performance": "k6 run -e TARGET_URL=http://localhost:3001/track -e VUS=100 -e DURATION=30s k6-perf-test.js",
    "unit-tests": "pnpm --filter better-analytics-dashboard unit-tests"
  },
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "clickhouse-migrations": "^1.0.4",
    "@clickhouse/client": "^1.11.1",
    "dotenv": "^16.5.0"
  }
}
